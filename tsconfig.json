{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/sharedDomain/*": ["src/contexts/Shared/Domain/*"],
      "@/sharedUseCases/*": ["src/contexts/Shared/UseCases/*"],
      "@/sharedExceptions/*": ["src/contexts/Shared/Domain/Exceptions/*"],
      "@/sharedInfrastructure/*": ["src/contexts/Shared/Infrastructure/*"],
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/**.ts", "apps/**/**.ts", "tests/**/**.ts", "package*.json"],
  "exclude": ["node_modules", "dbdata", "logs"]
}
